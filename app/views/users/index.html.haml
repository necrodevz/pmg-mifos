%h1 Users#index
%a{:class=> "btn btn-primary pull-right", :style => "margin-bottom:20px;", "role" => "button", href: "new"} Add User
%table{:class => 'table table-striped table-bordered'}
	%thead
		%tr
			%th Id
			%th	Username
			%th	First Name
			%th	Last Name
			%th	Email
			%th Role
			%th	Actions
	%tbody
		-@users.each do |user, value|
			%tr
				%td
					=user[:id]
				%td
					=user[:username]
				%td
					=user[:firstname]
				%td
					=user[:lastname]
				%td
					=user[:email]
				%td
					-user[:selectedRoles].each do |role|
						=role[:name].upcase
				%td
					%ul{:class => "list-inline"}
						%li
							%a{:href => "users/edit?id=#{user[:id]}"}
								%span{:class => "glyphicon glyphicon-edit"}
						%li
							%a
								%span{:class => "glyphicon glyphicon-remove"}
%a{:class=> "btn btn-primary pull-right", :style => "margin-bottom:20px;", "role" => "button", href: "new"} Add User

